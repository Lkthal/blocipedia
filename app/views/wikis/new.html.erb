<h1>New Wiki</h1>

<div class="row">
    <div class="col-md-4">
        <p>Stuff and things</p>
        <ul>
            <li>Stuff 1</li>
            <li>Stuff 2</li>
            <li>Stuff 3</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @wiki do |f| %>
            <% if @wiki.errors.any? %>
                <div class="alert alert-danger">
                    <h4><%= pluralize(@wiki.errors.count, "error") %></h4>
                    <ul>
                        <% @wiki.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', placeholder: "Enter title" %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body" %>
            </div>
            <div class="form-group">
                <%= f.label :private, class: 'checkbox private-checkbox' do %>
                    <%= f.check_box :private %> Private Wiki
                <% end %>
            </div>
            <div class="form-group">
                <%= f.submit "Save", class: 'btn btn-primary' %>
            </div>
        <% end %>
    </div>
</div>